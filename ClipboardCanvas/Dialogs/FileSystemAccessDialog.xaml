<ContentDialog
    x:Class="ClipboardCanvas.Dialogs.FileSystemAccessDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Clipboard Canvas requires permissions"
    DefaultButton="Primary"
    PrimaryButtonText="Restart Application"
    SecondaryButtonText="Continue in Restricted Access"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel Spacing="24">
        <TextBlock Text="Clipboard Canvas requires permission to access the file system for it to work correctly. Without the permission, some features will be disabled and/or limited." TextWrapping="WrapWholeWords" />

        <StackPanel Spacing="4">
            <TextBlock Text="You can grant this permission by heading to settings, whereupon the app will be closed." TextWrapping="WrapWholeWords" />
            <HyperlinkButton Command="{x:Bind ViewModel.OpenSettingsCommand}" Content="Open Settings" />
        </StackPanel>

        <TextBlock
            Opacity="0.6"
            Text="You can also continue in Restricted Access mode with limited features."
            TextWrapping="WrapWholeWords" />
    </StackPanel>
</ContentDialog>
