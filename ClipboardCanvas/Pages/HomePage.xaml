<Page
    x:Class="ClipboardCanvas.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:w="using:ClipboardCanvas.UserControls.Widgets"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">

    <Grid Padding="15,10,15,10" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <w:CollectionsWidget x:Name="CollectionsWidget" Grid.Row="0" />
        <w:TimelineWidget Loaded="TimelineWidget_Loaded" x:Name="TimelineWidget" Grid.Row="1" />
    </Grid>
</Page>
