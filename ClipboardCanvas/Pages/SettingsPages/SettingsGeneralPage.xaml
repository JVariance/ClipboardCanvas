<Page
    x:Class="ClipboardCanvas.Pages.SettingsPages.SettingsGeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.Pages.SettingsPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Padding="20,8,20,20">
        <StackPanel Spacing="12">
            <TextBlock
                FontSize="25"
                FontWeight="SemiBold"
                Text="General" />

            <StackPanel Spacing="12">
                <ToggleSwitch Header="Use Infinite Canvas as default" IsOn="{x:Bind ViewModel.UseInfiniteCanvasAsDefault, Mode=TwoWay}" />

                <ToggleSwitch Header="Show confirmation dialog when deleting items" IsOn="{x:Bind ViewModel.ShowDeleteConfirmationDialog, Mode=TwoWay}" />

                <ToggleSwitch Header="Show Timeline widget on Homepage" IsOn="{x:Bind ViewModel.ShowTimelineOnHomepage, Mode=TwoWay}" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
